<p id="notice"><%= notice %></p>

<h1>Listing Jobs</h1>

<table class='table table-bordered'>
  <thead>
    <tr>
      <th>Job title</th>
      <th>Date applied</th>
      <th>Response date</th>
      <th>Offer</th>
      <th>Offer salary</th>
      <th>Cover letter</th>
      <th>Follow up</th>
      <th>Follow up date</th>
      <th>Contact phone</th>
      <th>Contact email</th>
      <th>Contact first name</th>
      <th>Contact last name</th>
      <th>Notes</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= link_to job.company_name %></td>
        <td><%= job.job_title %></td>
        <td><%= job.date_applied %></td>
        <td><%= job.response_date %></td>
        <td><%= job.offer %></td>
        <td><%= job.offer_salary %></td>
        <td><%= job.cover_letter %></td>
        <td><%= job.follow_up %></td>
        <td><%= job.follow_up_date %></td>
        <td><%= job.contact_phone %></td>
        <td><%= job.contact_email %></td>
        <td><%= job.contact_first_name %></td>
        <td><%= job.contact_last_name %></td>
        <td><%= job.notes %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

